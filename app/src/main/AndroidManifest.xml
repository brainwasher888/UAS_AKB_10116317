<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uas.brainwasher">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.uas.brainwasher.activity.SignUpActivity"></activity>
        <activity android:name="com.uas.brainwasher.activity.LoginActivity" />
        <activity android:name="com.uas.brainwasher.activity.AddEditEditFriendsActivity" />
        <activity android:name="com.uas.brainwasher.activity.FriendsDetailActivity" />
        <activity
            android:name="com.uas.brainwasher.activity.SplashActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.uas.brainwasher.activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
    </application>

</manifest>